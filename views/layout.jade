mixin scripts
  script(src='/lib/jquery/dist/jquery.js')
  script(src='/lib/angular/angular.js')
  script(src='/lib/angular-ui-router/release/angular-ui-router.js')
  script(src='/lib/ngInfiniteScroll/ng-infinite-scroll.js')
  script(src='/lib/ui.bootstrap/src/transition/transition.js')
  script(src='/lib/ui.bootstrap/src/accordion/accordion.js')
  script(src='/lib/ui.bootstrap/src/collapse/collapse.js')
  script(src='/lib/ui.bootstrap/src/modal/modal.js')
  script(src='/lib/bootstrap/dist/js/bootstrap.js')
  script(src='//yandex.st/highlightjs/8.0/highlight.min.js')
  script(src='/js/app.js')

mixin stylesheets
  link(rel='stylesheet', type='text/css', href='/lib/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet', type='text/css', href='/lib/font-awesome/css/font-awesome.css')
  link(rel='stylesheet', type='text/css', href='//yandex.st/highlightjs/8.0/styles/monokai.min.css')
  link(rel='stylesheet', type='text/css', href='/css/app.css')

doctype html
html(lang='en-US', ng-app='classy')
  head
    title Classy
    +stylesheets()
  body
    .wrapper
      .container
        include navbar
        #app-ctrl(ui-view)
          #page-content(ui-view)
      include footer
  +scripts()
