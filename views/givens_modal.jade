.givens-modal
  .givens-modal-header.modal-header
    h3
      | Givens for {{ givens.exerciseTitle }}
      button.close(aria-hidden='true', ng-click='close()', type='button') &times;
  .givens-modal-body.modal-body
    table.table.table-striped.table-bordered(ng-repeat='type in givens.categories')
      thead
        tr
          th.type {{ type.type }}
      tbody
        tr(ng-repeat='given in type.givens')
          td
            a(ng-href='{{given.link}}', target='_blank') {{ given.title }}


