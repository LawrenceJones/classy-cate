.notes-modal
  .notes-modal-header.modal-header
    h3
      | Notes for {{ moduleName }}
      button.close(aria-hidden='true', ng-click='close()', type='button') &times;
  .notes-modal-body.modal-body
    span.lead(ng-show='links.length == 0')
      | No notes available for this course.
    table.table.table-striped.table-bordered(ng-show='links.length > 0')
      thead
        tr
          th ID
          th Link
      tbody
        tr(ng-repeat='note in links')
          td {{ $index + 1 }}
          td
            a(ng-href='{{note.link}}', target='_blank') {{ note.title }}


