.row#timetable

  .col-md-2.hidden-sm.hidden-xs#table-course-names
    table.table
      tr(course-cell='course', ng-repeat='course in courses')

  // The col in both tables force each table cell to have the same width
  .col-md-10
    .table-responsive#period-exs
      table.table#period-header
        colgroup
          col(ng-repeat='day in period.days track by $index')
        thead(period-bar)
      table.table#course-body
        colgroup
          col(ng-repeat='day in period.days track by $index')
        tbody(ng-repeat='course in courses')
          tr(ng-repeat='row in course.rows')
            td(exercise-box, ng-repeat='box in row', box='box' ng-click='open(box)')
